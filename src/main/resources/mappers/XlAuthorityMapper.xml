<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.finance.dao.XlAuthorityDao">
    <resultMap type="XlAuthority" id="XlAuthorityResult">
		<result property="authorityid" column="authorityid"/>
		<result property="authorityname" column="authorityname"/>
	</resultMap>
	
    <select id="getAuthoritys" resultType="XlAuthority">
 		select * from xl_authority
 	</select>
 	
    <select id="findXlAuthority" parameterType="Map" resultMap="XlAuthorityResult">
		select * from xl_authority
		<where>
		    <if test="authorityname!=null and authorityname!='' ">
				authorityname like #{authorityname}
			</if>
		</where>
		<if test="start!=null and size!=null">
			limit #{start},#{size}
		</if>
	</select>
	
    <select id="getTotalXlAuthority" parameterType="Map" resultType="Long">
		select count(*) from xl_authority
		<where>
		    <if test="authorityname!=null and authorityname!='' ">
				authorityname like #{authorityname}
			</if>
		</where>
	</select>
	
    <insert id="addXlAuthority" parameterType="XlAuthority">
		insert into xl_authority values(null,#{authorityname});
	</insert>
	
    <update id="updateXlAuthority" parameterType="XlAuthority" >
		update xl_authority
		<set>
			<if test="authorityname!=null and authorityname!='' ">
				authorityname=#{authorityname}
			</if>
		</set>
		where authorityid=#{authorityid}
	</update>
	
    <delete id="deleteXlAuthority" parameterType="Integer">
	    delete from xl_authority where authorityid=#{authorityid};
	</delete>

</mapper> 	